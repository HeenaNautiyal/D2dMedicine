<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/Text1"
        android:src="@drawable/logonew1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_below="@+id/Text1"
            android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ed_lastName"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:hint="Email..."
        android:textColor="@color/text_shadow"
        android:background="@drawable/gradient2"
        android:textColorHint="#d3d3d3"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"/>


    <EditText
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ed_password"
        android:paddingLeft="10dp"
        android:textSize="16dp"
        android:textColor="@color/text_shadow"
        android:background="@drawable/gradient2"
        android:inputType="textPassword"
        android:hint="Password..."
        android:textColorHint="#d3d3d3"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#015480"
            android:textSize="14dp"
            android:textStyle="bold"
            android:id="@+id/fpass1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="1dp"
            android:gravity="left"
            android:layout_below="@id/ed_password"
            android:text=""/>

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#015480"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:id="@+id/fpass"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:layout_below="@id/ed_password"
            android:text="Forgot Password?"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:id="@+id/btn_Submit"
            android:textColor="#ffffff"
            android:textSize="26dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="#015480"
            />
        <View
            android:id="@+id/SplitLine_hor3"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_below="@+id/btn_Submit"
            android:layout_marginTop="10dp"
            android:background="#015480" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/SplitLine_hor3"
            android:layout_weight="1">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#015480"
                android:textSize="16dp"
                android:gravity="center"
                android:padding="6dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/ed_password"
                android:text="Not a member?"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/tv_signup"
                android:padding="6dp"
                android:background="@drawable/gradient2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/ed_password"
                android:text=" Sign up now"/>


        </LinearLayout>


        <View
            android:layout_width="205dp"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/dark"/>
        <CheckBox
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox1"
            android:textColor="#015480"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Please accept the conditions"
            android:layout_below="@+id/textView1"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:checked="false" />


        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/tv_tc"
            android:padding="6dp"
            android:background="@drawable/gradient2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/ed_password"
            android:text="  Terms &amp; Conditions"/>
</LinearLayout>
        </ScrollView>
    </RelativeLayout>