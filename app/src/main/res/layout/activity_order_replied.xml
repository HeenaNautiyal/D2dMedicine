<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="com.bizhawkz.d2dRoni.OrderReplied">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/dark"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/lay1"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        >
        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:id="@+id/scrolllay1"
            android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:textSize="18dp"
    android:id="@+id/textmail"
    android:text="heena@outsourcingservicesusa.com"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ed_expier"
        android:textSize="16dp"
        android:layout_below="@+id/textmail"
        android:textColor="@color/text_shadow"
        android:paddingLeft="10dp"
        android:hint=" Order Departure date"
        android:textColorHint="#d3d3d3"
        android:background="@drawable/gradient2"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/lay1"
        android:id="@+id/lay2"
        android:orientation="vertical"
        >
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:id="@+id/myRadioGroup"
            android:layout_marginTop="16dp"
            android:checkedButton="@+id/sound" >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd_1"
                android:text="Your order has been placed. Thank you for Placing order." />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_2"
                android:layout_marginTop="16dp"
                android:text="This medicine is out of stock in our store. Please Order again and select another store. Thank you for Placing order." />

            RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_3"
                android:layout_marginTop="4dp"
                android:text="This prescription will be added to list." />
            RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_4"
                android:layout_marginTop="4dp"
                android:text="We can't add this prescription to our medicine list." />

        </RadioGroup>

        <EditText
            android:id="@+id/ed_commenmt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:lines="20"
            android:layout_marginRight="20dp"
            android:minLines="4"
            android:layout_marginTop="22dp"
            android:background="@drawable/gradient2"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:textColorHint="#d3d3d3"
            android:textColor="@color/white"
            android:hint="Comment*"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:singleLine="false" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    </LinearLayout>


    </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:textColor="#ffffff"
        android:text="Submit"
        android:id="@+id/btn_continue"
        android:background="#015480"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
